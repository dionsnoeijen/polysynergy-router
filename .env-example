AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Self-Hosted Mode
# Set to true to enable self-hosted features:
# - *.localhost subdomain support
# - Path-based routing fallback: /{project_id}/{stage}/path
# - DynamoDB Local for route storage
# - Local execution instead of Lambda invocation
ROUTER_LOCAL_MODE=true

# DynamoDB Configuration
DYNAMODB_LOCAL_ENDPOINT=http://dynamodb-local:8000
DYNAMODB_ROUTING_TABLE=polysynergy_routes

# API endpoint for local execution
LOCAL_API_ENDPOINT=http://api_local:8090